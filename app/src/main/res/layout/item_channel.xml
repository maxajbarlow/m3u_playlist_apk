<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/channel_item_focus"
    android:minHeight="48dp">

    <!-- Main row content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <!-- Channel info (left side) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EAEAFF"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_weight="1" />

                <!-- Group badge (shown in All/search mode) -->
                <TextView
                    android:id="@+id/channel_group_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#606080"
                    android:textSize="9sp"
                    android:background="@drawable/badge_background"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginStart="8dp"
                    android:singleLine="true"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/channel_epg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#606080"
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="1dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Favourite star (always visible, muted when not favourite) -->
        <ImageView
            android:id="@+id/channel_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_star"
            android:contentDescription="Favourite" />
    </LinearLayout>

    <!-- EPG progress bar at bottom -->
    <View
        android:id="@+id/epg_progress"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:background="@drawable/epg_progress_gradient"
        android:visibility="gone" />

    <!-- Bottom divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#08FFFFFF" />

</FrameLayout>
