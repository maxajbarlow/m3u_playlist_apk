<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state: cyan left border + gradient background -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Gradient background -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#2600D4FF"
                        android:endColor="#2A2A5C"
                        android:angle="0" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Cyan left accent bar -->
            <item android:width="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#00D4FF" />
                    <corners android:topLeftRadius="10dp" android:bottomLeftRadius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
